<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="450dp"
    tools:context=".outgarden">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Garden Side"
                android:textStyle="bold"
                android:textSize="30dp" />

            <Button
                android:id="@+id/sea_btn"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:background="@drawable/arrownext" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/garden_bg">

            <ImageView
                android:layout_width="280dp"
                android:layout_height="370dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/outgardeck" />

            <Button
                android:id="@+id/ingar_btn"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="258dp"
                android:layout_marginBottom="71dp"
                android:background="@drawable/arrowdown"
                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="55dp"
                android:layout_marginTop="90dp"
                android:letterSpacing="0.25"
                android:rotation="-50"
                android:text="Outside"
                android:textSize="20dp" />

            <Button
                android:id="@+id/go1btn"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="280dp"
                android:padding="0dp"
                android:text="GO-1" />

            <Button
                android:id="@+id/go2btn"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="200dp"
                android:padding="0dp"
                android:text="GO-2" />

            <Button
                android:id="@+id/go3btn"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="160dp"
                android:layout_marginBottom="150dp"
                android:padding="0dp"
                android:text="GO-3" />

            <Button
                android:id="@+id/go4btn"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="120dp"
                android:padding="0dp"
                android:text="GO-4" />

            <Button
                android:id="@+id/go5btn"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="160dp"
                android:layout_marginBottom="70dp"
                android:padding="0dp"
                android:text="GO-5" />

            <Button
                android:id="@+id/go6btn"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="40dp"
                android:padding="0dp"
                android:text="GO-6" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>